<%= javascript_include_tag "form_validator.js" %>

<div class="row">
  <div class="col s8 offset-s2">
    <div class="card">
      <div class="card-content" id="audit" data-checklist="<%= @audit.id %>">
        <h5> <%= @checklist.title %></h5>
        <p> <%= @checklist.description %></p>
        <hr />
        <% @checklist.questions.any?  do %>
          <ul class="card-body">
            <h6 class="center">Answer <%= @checklist.cout_questions %> Questions:</h6>
            <%= render @checklist.questions %>
          </ul>
        <% end %>
      </div>
      <div class="card-action">
        <%= link_to 'Create', checklist_audit_path(@checklist, @audit), class: 'waves-effect waves-light btn' %>
        <%= link_to 'Cancel', checklists_path, class: 'waves-effect waves-light btn red darken-1'%>
      </div>
    </div>
  </div>
</div>
