<div class="row">
  <div class="col s8 offset-s2">
    <div class="card">
      <div class="card-content">
        <h5> <%= @checklist.title %></h5>
        <p> <%= @checklist.description %></p>
        <% @checklist.questions.any?  do %>
        <ul class="card-body">
          <span class="card-title">Answer <%= @checklist.cout_questions %> Questions: </span>
          <% for question in @checklist.questions %>
          <li><%= question.title %></li>
          <% end %>
        </ul>
        <% end %>
      </div>
      <div class="card-action">
        <%= link_to 'Edit', edit_checklist_path(@checklist), class: 'waves-effect waves-light btn teal lighten-2' %>
        <%= link_to 'All Checklists', checklists_path, class: 'waves-effect waves-light btn teal lighten-2'%>
        <%= link_to "Open list", class: 'btn teal', data: { reflex: 'click->Audit#open_list'} %>
      </div>
    </div>
  </div>
</div>
<%= render "questions/form"%>
