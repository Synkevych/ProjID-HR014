<div class="row">
  <div class="col s8 offset-s2">
    <div class="card">
      <div class="card-content">
        <h5> <%= @audit.checklist.title %></h5>
        <p> <%= @audit.checklist.description %></p>
        <hr />
        <% @audit.checklist.questions.any?  do %>
        <ul class="card-body">
          <span class="card-title">Answer <%= @audit.checklist.count_questions %> Questions:</span>
          <%= @audit.checklist.questions.each_with_index do |question, i|  %>
            <%= render question %>
            <%= render 'form', audit: @audit %>
          <% end %>
        </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
