<div class="row">
  <div class="col s8 offset-s2">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Add a question:</span>
        <%= form_with(model: [ @checklist, @checklist.questions.build ]) do |form| %>
        <p>
          <%= form.label :title %><br>
          <%= form.text_field :title, data: { length: 40 }, id: "input_answer", placeholder: "What is JavaScript Closures?", required: true %>
        </p>
        <p>
          <%= form.label :description %><br>
          <%= form.text_area :description, placeholder: "A closure is a feature in JavaScript.", required: true, id: "comment" %>
        </p>
        <p>
          <%= form.submit class: 'waves-effect waves-light btn teal lighten-2'%>
        </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
