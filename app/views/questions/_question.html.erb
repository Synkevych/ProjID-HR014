<li class="collection-item text-darken-2">
  <p class="title"><%= question.title %></p>
  <small><%= question.description %></small>
</li>

<div class="row">
  <div class="col s8 offset-s2">
    <div class="card">
      <div class="card-content">
       <span class="card-title">Answer:</span>
        <%= form_with(model: [ @checklist, question, question.answers.build ], local: true) do |form| %>
        <p>
          <%= form.label :answer %><br>
          <%= form.text_field :answer, data: { length: 40 }, id: "input_answer" %>
        </p>
        <p>
          <%= form.label :comment %><br>
          <%= form.text_area :comment %>
        </p>
        <p>
          <%= form.submit class: 'waves-effect waves-light btn teal lighten-2'%>
        </p>
        <% end %>
      </div>
    </div>
  </div>
</div> 
