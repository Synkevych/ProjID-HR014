<p id="notice"><%= notice %></p>

<h1>Checklists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checklists.each do |checklist| %>
    <tr>
      <td><b><%= link_to checklist.title, checklist %><b></td>
      <td><%= link_to 'Destroy', checklist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Checklist', new_checklist_path %>

<br>

<div class="m-auto">
  <%= will_paginate @checklist, previous_label: "Older", next_label: "Newer" %>
</div>
